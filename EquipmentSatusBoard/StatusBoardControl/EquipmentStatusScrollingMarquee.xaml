<UserControl x:Class="EquipmentSatusBoard.StatusBoardControl.EquipmentStatusScrollingMarquee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EquipmentSatusBoard.StatusBoardControl"
             mc:Ignorable="d">
    <Grid Margin="5">
        <GroupBox BorderBrush="White" Foreground="White">
            <GroupBox.Header>
                <TextBlock Text="Equipment Status Notes:" FontFamily="New Times Roman" FontSize="24"/>
            </GroupBox.Header>
            <Grid Name="groupBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </GroupBox>
    </Grid>
</UserControl>
