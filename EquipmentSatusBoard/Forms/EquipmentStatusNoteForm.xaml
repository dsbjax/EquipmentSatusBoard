<Window x:Class="EquipmentSatusBoard.Forms.EquipmentStatusNoteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentSatusBoard.Forms"
        mc:Ignorable="d"
        Title="EquipmentStatusNoteForm" Background="{x:Null}" AllowsTransparency="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="None">
    <Grid>
        <Rectangle Style="{StaticResource DialogbackGround}"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25">
            <Label Style="{StaticResource DialogTitle}" Content="Enter/Update Equipment Status Note"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Label Content="Note:" VerticalAlignment="Center"/>
                <TextBox Name="note" Width="250" VerticalAlignment="Center"/>
                <Button Content="Add Note" IsDefault="True" Margin="10" Width="75" Click="ButtonClick"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
